{
  "name": "PulScreen",
  "version": "1.0.0",
  "description": "何台でも。何人でも。複数人で同じ動画を同じタイミングで視聴できる。YouTube動画のリアルタイム共有サービス「PulScreen(プルスクリーン)」",
  "author": "",
  "private": true,
  "scripts": {
    "dev": "yarn change:dev && nuxt",
    "build": "nuxt build && yarn htmlfunc",
    "htmlfunc": "mkdir -p ./functions/html && mv ./dist/index.html ./functions/html/index.html",
    "start": "nuxt start",
    "change:dev": "cp .dev_env .env && firebase use dev",
    "change:prod": "cp .prod_env .env && firebase use prod",
    "build:dev": "yarn change:dev && yarn build && firebase use dev",
    "build:prod": "yarn change:prod && yarn build && firebase use prod",
    "deploy:dev": "firebase use dev && yarn build:dev && firebase deploy",
    "deploy:prod": "firebase use prod && yarn build:prod && firebase deploy"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "@fortawesome/vue-fontawesome": "^0.1.7",
    "@nuxtjs/axios": "^5.5.4",
    "@nuxtjs/dotenv": "^1.4.0",
    "@nuxtjs/google-gtag": "^1.0.4",
    "@nuxtjs/pwa": "^3.0.0-beta.20",
    "aws-sdk": "^2.506.0",
    "bootstrap-vue": "^2.0.2",
    "core-js": "2.6.9",
    "firebase": "^7.2.3",
    "firebase-tools": "^7.15.0",
    "nuxt": "^2.0.0",
    "nuxt-fontawesome": "^0.4.0",
    "nuxt-twa-module": "^1.3.1",
    "nuxt-user-agent": "^1.2.2",
    "skyway-js": "^2.0.3",
    "source-map": "^0.7.3",
    "vue-plyr": "^5.1.3",
    "vue-uuid": "^1.1.1",
    "vue-youtube": "^1.4.0",
    "vuedraggable": "^2.23.2"
  },
  "devDependencies": {
    "hard-source-webpack-plugin": "^0.13.1",
    "nodemon": "^1.18.9"
  }
}
